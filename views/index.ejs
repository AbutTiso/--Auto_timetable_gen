<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AcademiPlan</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
        <a class="navbar-brand" href="/">
            <img src="/images/logooo.png" alt="AcademiPlan Logo" class="logo">
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" id="home-link">Home</a></li>
                <li class="nav-item"><a class="nav-link nav-btn" id="timetable-link">Timetable</a></li>
            </ul>
        </div>
    </nav>

    <!-- HOME SECTION -->
    <div id="home-section" class="page-section">

        <div class="hero-wrapper">
            <div class="hero-section">
                <img src="/images/img_hero.png" alt="Hero Image" class="hero-image">

                <div class="hero-overlay">
                    <h1>Crafting Brilliance, One Schedule at a Time.</h1>
                    <p>Organize, balance, and optimize your school's academic week using smart planning.</p>
                </div>
            </div>
        </div>

        <!-- KEY FEATURES AREA -->
        <div class="container mt-5">
            <div class="row">

                <div class="col-md-4 mb-4">
                    <div class="feature">
                        <h3>Automatic Timetable</h3>
                        <p>Generate an optimized weekly timetable that respects all school constraints automatically.</p>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="feature">
                        <h3>Full Editing Control</h3>
                        <p>Adjust sessions manually while keeping teacher limits and subject requirements consistent.</p>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="feature">
                        <h3>Simple & Intuitive</h3>
                        <p>A clean and modern interface built for school administrators‚Äîfast, clear, and efficient.</p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- TIMETABLE SECTION -->
    <div id="timetable-section" class="container page-section" style="display: none;">
        <h1 class="my-4">Timetable</h1>

        <h2>Subjects</h2>
        <ul>
            <% data.subjects.forEach(subject => { %>
                <li><%= subject.name %> - <%= subject.hours %> hours/week, <%= subject.teachers %> teacher(s)</li>
            <% }); %>
        </ul>

        <form action="/generate-timetable" method="POST" class="my-4" id="generate-timetable-form">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-magic"></i> Generate Timetable
            </button>
        </form>

        <div id="timetable-container">
            <% if (data.timetable && Object.keys(data.timetable).length > 0) { %>
                <h2>Generated Timetable</h2>
                <%- include('timetablePartial', { data: data }) %>
            <% } else { %>
                <div class="alert alert-info">
                    <p>No timetable generated yet. Click "Generate Timetable" to create one.</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- ENHANCED EDIT MODAL -->
    <div class="modal fade" id="editModal" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">

          <div class="modal-header bg-primary text-white">
            <h5 class="modal-title">
                <i class="fas fa-edit"></i> Edit Lesson Slot
            </h5>
            <button type="button" class="close text-white" data-dismiss="modal">
                <span>&times;</span>
            </button>
          </div>

          <div class="modal-body">
            <div id="modal-error-message" class="alert alert-danger" style="display: none;"></div>
            
            <div class="alert alert-info">
              <strong><i class="fas fa-info-circle"></i> Current Lesson:</strong> 
              <span id="current-subjects-with-category" class="font-weight-bold"></span>
            </div>
            
            <!-- DELETED LESSONS SECTION -->
            <div id="deleted-lessons-container" class="mb-3" style="display: none;">
                <div class="alert alert-warning">
                    <strong><i class="fas fa-history"></i> Recently Deleted Lessons</strong>
                    <p class="mb-1">These subjects were recently removed and can be added back:</p>
                    <div id="deleted-lessons-list" class="mt-2">
                        <!-- Deleted lessons will be populated here -->
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label class="font-weight-bold">Select New Lesson</label>
                <small class="form-text text-muted mb-2">
                    <i class="fas fa-lightbulb"></i> Subjects show current/max hours. You can only add subjects that haven't reached their weekly limit.
                </small>
                <select class="form-control" id="subject-select" size="6">
                    <option value="" class="text-muted">-- Empty slot (no lesson) --</option>
                    <!-- Options will be populated dynamically by JavaScript -->
                </select>
            </div>
            
            <div class="available-subjects-info mt-3 p-3 border rounded bg-light">
                <small class="text-muted">
                    <strong><i class="fas fa-chart-bar"></i> Weekly Limits:</strong> 
                    Languages (10h max) ‚Ä¢ Sciences (10h max) ‚Ä¢ Arts (5h max) ‚Ä¢ Sports (5h max)
                </small>
                <br>
                <small class="text-muted">
                    <strong><i class="fas fa-users"></i> Teacher Limits:</strong> 
                    Languages/Sciences (2 teachers) ‚Ä¢ Arts/Sports (1 teacher)
                </small>
            </div>
          </div>

          <div class="modal-footer">
            <button class="btn btn-secondary" data-dismiss="modal">
                <i class="fas fa-times"></i> Cancel
            </button>
            <button class="btn btn-primary" id="save-changes">
                <i class="fas fa-save"></i> Save Changes
            </button>
          </div>

        </div>
      </div>
    </div>

    <!-- FOOTER -->
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">¬© 2025 AcademiPlan. All rights reserved.</span>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navigation between sections
        document.getElementById('home-link').addEventListener('click', function() {
            document.getElementById('home-section').style.display = 'block';
            document.getElementById('timetable-section').style.display = 'none';
            document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            this.classList.add('active');
        });

        document.getElementById('timetable-link').addEventListener('click', function() {
            document.getElementById('home-section').style.display = 'none';
            document.getElementById('timetable-section').style.display = 'block';
            document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            this.classList.add('active');
        });

        // Initialize with home active
        document.getElementById('home-link').classList.add('active');

        // Timetable generation with AJAX
        document.getElementById('generate-timetable-form')?.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const button = this.querySelector('button');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
            button.disabled = true;

            fetch('/generate-timetable', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({})
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Reload the page to show the new timetable
                    window.location.reload();
                } else {
                    alert('Error generating timetable: ' + (data.error || 'Unknown error'));
                    button.innerHTML = originalText;
                    button.disabled = false;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to generate timetable');
                button.innerHTML = originalText;
                button.disabled = false;
            });
        });

        // Edit modal functionality
        let currentDay = '';
        let currentPeriod = '';
        let currentSubject = '';

        // Initialize recently deleted lessons from localStorage
        let recentlyDeletedLessons = JSON.parse(localStorage.getItem('academiplan_deleted_lessons')) || [];

        // Function to open edit modal
        window.openEditModal = function(day, period, subject) {
            currentDay = day;
            currentPeriod = period;
            currentSubject = subject;
            
            // Update modal title with current slot info
            const modalTitle = document.querySelector('.modal-title');
            modalTitle.innerHTML = `<i class="fas fa-edit"></i> Edit ${day} - Period ${period}`;
            
            // Update current subject display
            const currentSubjectDisplay = document.getElementById('current-subjects-with-category');
            if (subject && subject !== 'EMPTY') {
                const category = getCategoryForSubject(subject);
                currentSubjectDisplay.textContent = `${subject} [${category}]`;
            } else {
                currentSubjectDisplay.textContent = 'Empty slot';
            }
            
            // Show deleted lessons if any exist
            displayDeletedLessons();
            
            // Populate subject dropdown
            populateSubjectDropdown(subject);
            
            // Show modal
            $('#editModal').modal('show');
        };

        // Function to display deleted lessons
        function displayDeletedLessons() {
            const container = document.getElementById('deleted-lessons-container');
            const list = document.getElementById('deleted-lessons-list');
            
            // Filter deleted lessons that are not currently in the timetable
            const activeDeletedLessons = recentlyDeletedLessons.filter(deleted => {
                return isSubjectAvailable(deleted.subject);
            });
            
            if (activeDeletedLessons.length > 0) {
                container.style.display = 'block';
                list.innerHTML = '';
                
                activeDeletedLessons.forEach((deleted, index) => {
                    const timeAgo = getTimeAgo(deleted.timestamp);
                    const category = getCategoryForSubject(deleted.subject);
                    
                    const lessonDiv = document.createElement('div');
                    lessonDiv.className = 'deleted-lesson-item mb-2 p-2 border rounded';
                    lessonDiv.innerHTML = `
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>${deleted.subject}</strong> [${category}]
                                <small class="text-muted ml-2">
                                    <i class="fas fa-clock"></i> ${timeAgo}
                                </small>
                            </div>
                            <button class="btn btn-sm btn-outline-primary btn-restore" 
                                    data-subject="${deleted.subject}"
                                    data-index="${index}">
                                <i class="fas fa-undo"></i> Restore
                            </button>
                        </div>
                    `;
                    list.appendChild(lessonDiv);
                });
                
                // Add event listeners to restore buttons
                document.querySelectorAll('.btn-restore').forEach(button => {
                    button.addEventListener('click', function() {
                        const subject = this.getAttribute('data-subject');
                        const index = parseInt(this.getAttribute('data-index'));
                        
                        // Set the subject in dropdown
                        document.getElementById('subject-select').value = subject;
                        
                        // Remove from deleted lessons
                        recentlyDeletedLessons.splice(index, 1);
                        localStorage.setItem('academiplan_deleted_lessons', JSON.stringify(recentlyDeletedLessons));
                        
                        // Update display
                        displayDeletedLessons();
                    });
                });
            } else {
                container.style.display = 'none';
            }
        }

        // Function to get time ago string
        function getTimeAgo(timestamp) {
            const now = new Date().getTime();
            const diff = now - timestamp;
            
            const minutes = Math.floor(diff / (1000 * 60));
            const hours = Math.floor(diff / (1000 * 60 * 60));
            
            if (minutes < 1) {
                return 'just now';
            } else if (minutes < 60) {
                return `${minutes} minute${minutes !== 1 ? 's' : ''} ago`;
            } else if (hours < 24) {
                return `${hours} hour${hours !== 1 ? 's' : ''} ago`;
            } else {
                const days = Math.floor(hours / 24);
                return `${days} day${days !== 1 ? 's' : ''} ago`;
            }
        }

        // Function to check if subject is available (not currently in timetable)
        function isSubjectAvailable(subject) {
            const subjectHours = calculateCurrentSubjectHours();
            const currentHours = subjectHours[subject] || 0;
            const category = getCategoryForSubject(subject);
            const maxHours = getCategoryMaxHours(category);
            
            return currentHours < maxHours;
        }

        // Function to get category for a subject
        function getCategoryForSubject(subject) {
            const categoryMap = {
                'English': 'Languages',
                'French': 'Languages',
                'Maths': 'Sciences',
                'Physics': 'Sciences',
                'History': 'Arts',
                'Music': 'Arts',
                'PE': 'Sports'
            };
            return categoryMap[subject] || 'General';
        }

        // Function to populate subject dropdown
        function populateSubjectDropdown(currentSubjectName) {
            const select = document.getElementById('subject-select');
            select.innerHTML = '';
            
            // Add empty slot option
            const emptyOption = document.createElement('option');
            emptyOption.value = '';
            emptyOption.textContent = '-- Empty slot (no lesson) --';
            emptyOption.className = 'text-muted';
            if (!currentSubjectName || currentSubjectName === 'EMPTY') {
                emptyOption.selected = true;
            }
            select.appendChild(emptyOption);
            
            // Get all subjects from the page
            const subjects = [];
            document.querySelectorAll('#timetable-section ul li').forEach(li => {
                const text = li.textContent;
                const match = text.match(/(.+?) - (\d+) hours\/week, (\d+) teacher/);
                if (match) {
                    subjects.push({
                        name: match[1].trim(),
                        hours: parseInt(match[2]),
                        teachers: parseInt(match[3])
                    });
                }
            });
            
            // Calculate current hours for each subject
            const subjectHours = calculateCurrentSubjectHours();
            
            subjects.forEach(subject => {
                const option = document.createElement('option');
                option.value = subject.name;
                
                // Get subject info
                const subjectName = subject.name;
                const category = getCategoryForSubject(subjectName);
                const maxHours = getCategoryMaxHours(category);
                const currentHours = subjectHours[subjectName] || 0;
                const hoursLeft = maxHours - currentHours;
                
                // Check if it's the currently selected subject
                const isCurrentSubject = subjectName === currentSubjectName;
                
                // Build the display text
                let displayText = `${subjectName} [${category}] - ${currentHours}/${maxHours}h`;
                
                // Add teacher status
                if (subject.teachers > 0) {
                    displayText += ' ‚Ä¢ ‚úÖ Available teachers';
                } else {
                    displayText += ' ‚Ä¢ ‚ùå No teachers';
                }
                
                // Add hours status
                if (hoursLeft > 0) {
                    displayText += ` ‚Ä¢ ${hoursLeft}h left`;
                } else {
                    displayText += ' ‚Ä¢ ‚õî Maxed out';
                }
                
                // Check if this subject is recently deleted
                const isRecentlyDeleted = recentlyDeletedLessons.some(deleted => 
                    deleted.subject === subjectName
                );
                
                if (isRecentlyDeleted) {
                    displayText += ' ‚Ä¢ ‚Ü©Ô∏è Recently deleted';
                }
                
                // Add current subject indicator
                if (isCurrentSubject) {
                    displayText += ' ‚Ä¢ üëà Currently selected';
                    option.selected = true;
                }
                
                option.textContent = displayText;
                
                // Disable option if no teachers available or maxed out hours
                option.disabled = subject.teachers <= 0 || hoursLeft <= 0;
                
                // Add CSS classes for styling
                if (isCurrentSubject) {
                    option.classList.add('font-weight-bold', 'bg-light');
                }
                if (isRecentlyDeleted) {
                    option.classList.add('text-info');
                }
                if (option.disabled) {
                    option.classList.add('text-muted');
                }
                
                select.appendChild(option);
            });
        }

        // Function to calculate current subject hours from timetable
        function calculateCurrentSubjectHours() {
            const hours = {};
            const timetableCells = document.querySelectorAll('.timetable-cell[data-subject]');
            
            timetableCells.forEach(cell => {
                const subject = cell.getAttribute('data-subject');
                if (subject && subject !== 'EMPTY') {
                    hours[subject] = (hours[subject] || 0) + 1;
                }
            });
            
            return hours;
        }

        // Function to get max hours for a category
        function getCategoryMaxHours(category) {
            const maxHours = {
                'Languages': 10,
                'Sciences': 10,
                'Arts': 5,
                'Sports': 5,
                'General': 5
            };
            return maxHours[category] || 5;
        }

        // Save changes button handler
        document.getElementById('save-changes').addEventListener('click', function() {
            const selectedSubject = document.getElementById('subject-select').value;
            
            // If subject was removed, add to deleted lessons
            if (currentSubject && currentSubject !== 'EMPTY' && (!selectedSubject || selectedSubject === '')) {
                const category = getCategoryForSubject(currentSubject);
                
                // Add to deleted lessons
                recentlyDeletedLessons.unshift({
                    subject: currentSubject,
                    category: category,
                    timestamp: new Date().getTime()
                });
                
                // Keep only last 10 deleted lessons
                if (recentlyDeletedLessons.length > 10) {
                    recentlyDeletedLessons.pop();
                }
                
                // Save to localStorage
                localStorage.setItem('academiplan_deleted_lessons', JSON.stringify(recentlyDeletedLessons));
            }
            
            // If a previously deleted subject is being restored, remove it from deleted list
            if (selectedSubject && selectedSubject !== '') {
                recentlyDeletedLessons = recentlyDeletedLessons.filter(deleted => 
                    deleted.subject !== selectedSubject
                );
                localStorage.setItem('academiplan_deleted_lessons', JSON.stringify(recentlyDeletedLessons));
            }
            
            // Send update to server
            updateTimetableSlot(currentDay, currentPeriod, selectedSubject);
        });

        // Function to update timetable slot
        function updateTimetableSlot(day, period, subject) {
            const button = document.getElementById('save-changes');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
            button.disabled = true;

            fetch('/update-slot', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    day: day,
                    period: period,
                    subject: subject || ''
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Close modal and reload page
                    $('#editModal').modal('hide');
                    window.location.reload();
                } else {
                    // Show error in modal
                    const errorMessage = document.getElementById('modal-error-message');
                    errorMessage.textContent = data.error || 'Failed to update slot';
                    errorMessage.style.display = 'block';
                    button.innerHTML = originalText;
                    button.disabled = false;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                const errorMessage = document.getElementById('modal-error-message');
                errorMessage.textContent = 'Network error. Please try again.';
                errorMessage.style.display = 'block';
                button.innerHTML = originalText;
                button.disabled = false;
            });
        }

        // Clear error message when modal is hidden
        $('#editModal').on('hidden.bs.modal', function() {
            document.getElementById('modal-error-message').style.display = 'none';
        });
    </script>
</body>
</html>